function [D,R,T] = disparity_map(scene_path)
    [I,ndisp] = input_data(scene_path);
    I1 = rgb_to_gray(I{1});
    I2 = rgb_to_gray(I{2});
    window_radius = 6;
    tic();
    [DisparityMap{1}, DisparityMap{2}] = stereoMatchWindowCensus_joint_adp(I2, I1, window_radius , ndisp);
    [DisparityMap_sparse{1}, DisparityMap_sparse{2}] = Consis_check(DisparityMap{1}, DisparityMap{2});
    
    for i =1:2
        dmf = major_vote(dmf,2);   
    end
    toc();
end
